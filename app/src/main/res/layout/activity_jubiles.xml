<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/icons"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/toolbargeneral" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:onClick="changeToTemperaturaJubiles"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="150dp"
            android:layout_height="160dp"
            android:elevation="4dp"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="@color/icons">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="changeToTemperaturaJubiles"
                    android:src="@drawable/temperatura"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="8pt"
                    android:text="Temperatura"
                    android:gravity="center"
                    android:textStyle="italic"
                    android:textColor="@color/primary_text"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:onClick="changeToHumedadRelativaJubiles"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="150dp"
            android:layout_height="160dp"
            android:elevation="4dp"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="@color/icons">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="changeToHumedadRelativaJubiles"
                    android:src="@drawable/humidity_"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="8pt"
                    android:text="Humedad relativa"
                    android:textStyle="italic"
                    android:textColor="@color/primary_text"
                    android:gravity="center"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:onClick="changeToHuedadSueloJubiles"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="150dp"
            android:layout_height="160dp"
            android:elevation="4dp"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="@color/icons">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="changeToHuedadSueloJubiles"
                    android:src="@drawable/humidity_"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="8pt"
                    android:text="Humedad Suelo"
                    android:textStyle="italic"
                    android:textColor="@color/primary_text"
                    android:gravity="center"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorFondo"
    tools:context="com.example.mand.myapplication.MainActivity">
    <include layout="@layout/toolbargeneral" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            android:onClick="cherubsActivity"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:elevation="4dp"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="@color/icons">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:background="#F7F7F7"
                 android:orientation="horizontal">
                 <TextView
                     android:layout_width="10dp"
                     android:layout_height="match_parent"
                     android:background="@color/DarkColor"/>
                 <ImageView
                     android:layout_width="wrap_content"
                     android:layout_height="108dp"
                     android:onClick="cherubsActivity"
                     android:src="@drawable/cherub"
                     style="?android:borderlessButtonStyle"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="11pt"
                        android:text="Cherubs"
                        android:layout_marginTop="10dp"
                        android:textStyle="normal"
                        android:textColor="@color/primary_text"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:textSize="6pt"
                        android:text="Descripcion"
                        android:textStyle="normal"
                        android:textColor="@color/primary_text"
                        />
                </LinearLayout>

             </LinearLayout>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:orientation="horizontal"
                 android:background="#F7F7F7"
                 android:weightSum="1">
                 <TextView
                     android:layout_width="10dp"
                     android:layout_height="match_parent"
                     android:background="@color/DarkColor"/>
                 <Button
                     android:background="#EEEEEE"
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:text="Resume"
                     android:textSize="13dp"
                     android:textStyle="normal"
                     android:drawableLeft="@drawable/play"
                    android:textAlignment="textStart"
                     android:layout_weight="0.28"/>
             </LinearLayout>
         </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:onClick="eclipsesActivity"
            android:elevation="4dp"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="@color/icons">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="108dp"
                    android:onClick="eclipsesActivity"
                    android:src="@drawable/eclipse"
                    style="?android:borderlessButtonStyle"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="10pt"
                    android:text="Eclipses"
                    android:textStyle="normal"
                    android:textColor="@color/primary_text"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            android:onClick="glorysActivity"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:elevation="4dp"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="@color/icons">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="108dp"
                    android:onClick="glorysActivity"
                    android:src="@drawable/glorys"
                    style="?android:borderlessButtonStyle"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="10pt"
                    android:text="Glorys"
                    android:textStyle="normal"
                    android:textColor="@color/primary_text"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="150dp"
            android:onClick="jubilesActivity"
            android:layout_height="150dp"
            android:elevation="4dp"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="@color/icons">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="108dp"
                    android:onClick="jubilesActivity"
                    android:src="@drawable/jubilees"
                    style="?android:borderlessButtonStyle"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="10pt"
                    android:text="Jubilees"
                    android:textStyle="normal"
                    android:textColor="@color/primary_text"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:onClick="sunburtsActivity"
            android:elevation="4dp"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="@color/icons">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="108dp"
                    android:onClick="sunburtsActivity"
                    android:src="@drawable/sunburst"
                    style="?android:borderlessButtonStyle"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="10pt"
                    android:text="SunBurts"
                    android:textStyle="normal"
                    android:textColor="@color/primary_text"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>
</LinearLayout>
